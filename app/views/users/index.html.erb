<h3>Users</h3>
<div class="container">
<table class="threeColumn solid clickableGlyph fullWidth table">
  <tbody>
    <tr>
      <td>Username</td>
      <td>Email</td>
      <td>Registered</td>
      <td>Role</td>
      <td>Action</td>
      <td></td>
    </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
      <td>
        <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini">Edit</a>
        <%= render user %>
      </td>
      <td><%= link_to("Delete", user_path(user), :data => { toggle: 'modal', :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %>

      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>